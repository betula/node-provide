{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": ".dist",
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "./**/*.js"
  ]
}
